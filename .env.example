# ============================================================================
# Beehus - Example environment file (single source)
# Copy to .env and adjust values for your environment.
# ============================================================================

# --- Infrastructure ----------------------------------------------------------
MONGO_USER=admin
MONGO_PASS=CHANGE_ME
MONGO_URI=mongodb://admin:CHANGE_ME@mongo:27017
MONGO_DB_NAME=platform_db

RABBITMQ_USER=guest
RABBITMQ_PASS=guest
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672//

REDIS_URL=redis://redis:6379/0

# Host-side shared downloads folder mounted into containers as /downloads.
DOWNLOADS_DIR=./downloads

# --- Selenium / Runtime ------------------------------------------------------
SELENIUM_REMOTE_URL=http://selenium-hub:4444/wd/hub
VNC_URL_BASE=http://localhost
SELENIUM_MAX_SLOTS=5
SELENIUM_NODE_COUNT=2
SELENIUM_NODE_MAX_SESSIONS=1

# --- Security / Auth ---------------------------------------------------------
JWT_SECRET_KEY=CHANGE_ME_STRONG_SECRET
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
DATABASE_ENCRYPTION_KEY=CHANGE_ME_FERNET_KEY

# Optional token encryption key used by app.console.main
TOKEN_ENC_KEY=CHANGE_ME_TOKEN_ENC_KEY

# --- Admin bootstrap ---------------------------------------------------------
ADMIN_EMAIL=admin@beehus.local
ADMIN_PASSWORD=CHANGE_ME
ADMIN_FULL_NAME=Admin User

# --- Email / Invitation ------------------------------------------------------
FRONTEND_URL=http://localhost:5173
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
SMTP_FROM_NAME=Beehus Platform
SMTP_USE_TLS=true

# --- Frontend (dev container) ------------------------------------------------
VITE_API_URL=http://localhost:8000
VITE_VNC_URL_BASE=http://localhost
VITE_VNC_PASSWORD=secret
